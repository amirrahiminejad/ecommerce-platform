{
    "info": {
        "name": "TagController API",
        "description": "Postman collection for TagController API endpoints.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get All Tags",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/tags",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "tags"
                    ]
                }
            }
        },
        {
            "name": "Get Tag By ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/tags/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "tags",
                        ":id"
                    ]
                }
            }
        },
        {
            "name": "Get Tag By Name",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/tags/name/:name",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "tags",
                        "name",
                        ":name"
                    ]
                }
            }
        },
        {
            "name": "Save Tag",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"id\": null,\n    \"name\": \"sampleTag\",\n    \"description\": \"This is a sample tag.\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/tags",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "tags"
                    ]
                }
            }
        },
        {
            "name": "Delete Tag By ID",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/tags/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "tags",
                        ":id"
                    ]
                }
            }
        }
    ]
}