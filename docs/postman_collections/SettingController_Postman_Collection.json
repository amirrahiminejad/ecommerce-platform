{
    "info": {
        "name": "SettingController API",
        "description": "Postman collection for SettingController API endpoints.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get Settings By User ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/settings/user/:userId",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "settings",
                        "user",
                        ":userId"
                    ]
                }
            }
        },
        {
            "name": "Get Setting By Key and User ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/settings/user/:userId/key/:key",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "settings",
                        "user",
                        ":userId",
                        "key",
                        ":key"
                    ]
                }
            }
        },
        {
            "name": "Save Setting",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"id\": null,\n    \"key\": \"sampleKey\",\n    \"value\": \"sampleValue\",\n    \"userId\": 1\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/settings",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "settings"
                    ]
                }
            }
        },
        {
            "name": "Delete Setting By ID",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/settings/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "settings",
                        ":id"
                    ]
                }
            }
        }
    ]
}